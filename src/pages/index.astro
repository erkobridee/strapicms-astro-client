---
import Layout from '~/layouts/main.astro';

import Link from '~/components/Link.astro';

import { SITE_TITLE as title } from '~/settings';
---

<Layout
  content={{
    title
  }}
>
  <div class="grid h-screen place-items-center content-center space-y-4">
    <h2>Strapi CMS Astro Client</h2>

    <h3>ðŸš§ under development.... ðŸš§</h3>

    <div class="w-full border-b border-gray-300"></div>

    <div class="flex flex-col items-center space-y-4">
      <div class="font-bold">Available Pages</div>

      <div class="flex gap-2">
        <div>all data:</div>

        <div class="flex gap-2 divide-x divide-gray-300">
          <Link class="pr-2" href="/all-data/locales">Locales</Link>

          <Link class="pr-2" href="/all-data/pages">Pages</Link>

          <Link class="pr-2" href="/all-data/tags">Tags</Link>

          <Link class="pr-2" href="/all-data/blogs">Blogs</Link>
        </div>
      </div>
    </div>

    {
      ['en', 'pt-BR'].map((locale) => (
        <div class="flex gap-2">
          <div>{locale}:</div>

          <div class="flex gap-2 divide-x divide-gray-300">
            <Link class="pr-2" href={`/${locale}/pages`}>
              Pages
            </Link>

            <Link class="pr-2" href={`/${locale}/tags`}>
              Tags
            </Link>

            <Link class="pr-2" href={`/${locale}/blogs`}>
              Blogs
            </Link>
          </div>
        </div>
      ))
    }
  </div>

  <!--
    <div class="w-full border-b border-gray-300"></div>

    <Link href="https://github.com/erkobridee">GitHub - Erko Bridee</Link>
    -->
</Layout>
